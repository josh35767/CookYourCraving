<div class="container background-list">

  <h2> Create a New Recipe! </h2>
  <form action="/recipes/new" method="post" class="form-horizontal">

    <div class="form-group">
      <label for="title-input"> Title for Recipe: </label>
      <input type="text" name="recipeTitle" id="title-input">
    </div>

    <div class="form-group">
      <label for="cooking-time-input"> Cooking Time: </label>
      <input type="number" name="recipeTime" id="cooking-time-input">
    </div>

    <div class="form-group">
      <label for="servings-input"> Serves: </label>
      <input type="number" name="recipeServings" id="servings-input"><br>
    </div>

    <div class="form-group">
      <label for="ingredients-input"> Ingredient: </label>
      <textarea name="recipeIngredients" id="ingredients-input"> </textarea>
    </div>

    <div class="form-group">
      <label for="recipe-input"> Recipe: </label>
      <textarea name="recipeRecipe" id="recipe-input"> </textarea>
    </div>

    <div class="form-group">
      <label for="ethnicty-input"> Ethnicty </label>
      <select id="ethnicty-input" name="recipeEthnicty">
        <% foodCategories.forEach((oneCategory) => { %>
         <option value="<%=oneCategory%>"> <%= oneCategory %> </option>
        <% }) %>
      </select>
    </div>

    <button> Save this Recipe </button>

  </form>

</div>
