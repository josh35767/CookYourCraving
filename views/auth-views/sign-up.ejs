<div class='sign-up-content'>

  <div class='sign-up-header sign-up-container'>
    <h2> Sign up Now! </h2>
  </div>

  <div class='sign-up-container sign-up-form'>

    <% if (typeof errorMessage === 'string') { %>
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only">Error:</span>
        <%= errorMessage %>
    </div>
    <% } %>

    <form action="/sign-up" method="post" class="form-horizontal">

      <div class="form-group ">
        <label for=""> Display Name </label>
        <div class = "input-group input-group-lg">
          <input type="text" class="form-control" name="displayName" placeholder="Display Name">
          <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
        </div>
      </div>

      <div class="form-group">
        <label for=""> Username </label>
        <div class="input-group input-group-lg">
          <input type="text" class="form-control" name="userName" placeholder="Username">
          <span class="input-group-addon"><i class="fa fa-id-card-o fa-fw"></i></span>
        </div>
      </div>

      <div class="form-group">
        <label for=""> Password </label>
        <div class="input-group input-group-lg">
          <input type="password" name="password" placeholder="Password" class="form-control">
          <span class="input-group-addon"><i class="fa fa-lock fa-fw" aria-hidden="true"></i></span>
        </div>
      </div>

      <div class="form-group">
        <label for=""> Confirm Password </label>
        <div class="input-group input-group-lg">
          <input type="password" name="passwordConfirm" placeholder="Confirm Password" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <a href="/auth/facebook" class="loginBtn loginBtn--facebook">
          Login with Facebook
        </a>

        <a href="/auth/google" class="loginBtn loginBtn--google">
          Login with Google
        </a>
      </div>

      <div class="form-group">
        <button class="btn btn-default btn-lg"> Sign Up! </button>
      </div>
      
    </form>
  </div>

</div>
